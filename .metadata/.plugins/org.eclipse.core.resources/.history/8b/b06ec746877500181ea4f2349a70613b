<?xml version="1.0" encoding="UTF-8"?>
<proxy name="RestProxy" startOnLoad="true" transports="https http" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <filter xpath="//postcodes">
                <then>
                    <property expression="//postcodes/postcode" name="REST_URL_POSTFIX" scope="axis2" type="STRING"/>
                    <property name="HTTP_METHOD" scope="axis2" type="STRING" value="GET"/>
                </then>
                <else/>
            </filter>
            <send>
                <endpoint key="PostCodeEP"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </target>
</proxy>
